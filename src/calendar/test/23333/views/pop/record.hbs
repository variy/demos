{{!记录}}
<div class="record-page">
    <div  id="editInfo-sect" class="addRecord-comment">
    	<form class="form-inline main-form" id="form-addRecord" novalidate="novalidate">
            <ul class="addRecord-list" data-type="addRecord">
                <li class="clearfix">
                    <label class="l-label">姓名</label>
                    <p id="user-name" class="right-info" style="display:none"></p>
                    <div class="form-group" style="display:none">
                        <input type="text" maxlength="5" autocomplete="off" class="i-input" name="username" id="edit-name-input" value="">
                    </div>
                    <input type="hidden" id="recordName" value="{{aUinfo.rName}}">
                </li>
                <li class="clearfix">
                    <label class="l-label">性别</label>
                    <p id="user-gender" class="right-info">{{aUinfo.iGender}}</p>
                </li>
                <li class="clearfix">
                    <label class="l-label">出生于</label>
                    <div id="user-lunar" class="right-info"></div>
                    <input type="hidden" id="user-lunar-input" value="{{aUinfo.Pbirth}}">
                </li>
                <li class="clearfix">
                    <label class="l-label">手机号</label>
                    <div class="form-group">
                        <input type="text" value="" name="telephone" class="i-input" id="edit-mobile-input">
                    </div> 
                </li>
                <li class="clearfix">
                    <label class="l-label">关系</label>
                    <div class="right-info" id="u-relation">
                        <div class="dropdown rel-classify-dropdown" id="relation">
                            <button type="button" class="btn btn-default dropdown-toggle" id="user-relation" name="relation">
                                <span class="txt"></span>
                                <i class="triangle-border"></i>
                            </button>
                            <ul class="dropdown-menu" id="record-page-rel-class-dropdown-menu">
                                <li class="divider"></li>
                                <li class="add-class-func" data-type="add">
                                    <a href="javascript:;">
                                        <p class="add-class-btn">+&nbsp;&nbsp;&nbsp;新的分类</p>
                                        <div class="form-group add-class-form" style="display: none;">
                                            <input name="add_classify" maxlength="10" type="text"/>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
            </ul>
        </form>
        <div class="paipan-btn-wrap">
                <a id="storage-btn" href="javascript:;" class="bazi-uibtn-l">确定</a>
        </div>
    </div>
</div>

{{!单页面js}}
{{#section 'page_js'}}
	<script>
		var name = $('#recordName').val();
		if (name === '') {
			$('#edit-name-input').parent().show();
		}else{
			$('#user-name').show().html(name);
		}
		$('#user-lunar').html($('#user-lunar-input').val());
    </script>
{{/section}}